@using GardeningF.Models
@{
    ViewBag.Title = "Empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container text-center">
    <h1 class="font-weight-bold" style="color:var(--color-principal);">Empresas que confian en nosotros</h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" height="500" src="https://res.cloudinary.com/du17vjpcn/image/upload/v1624226503/ecommerce/home-depot_uceguv.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <a href="https://www.homedepot.com.mx/" class="btn boton" style="width:200px;">Ir al sitio</a>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="500" src="https://res.cloudinary.com/du17vjpcn/image/upload/v1624226502/ecommerce/walmart_qpfces.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <a href="https://www.walmart.com.mx/" class="btn boton" style="width:200px;">Ir al sitio</a>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="500" src="https://res.cloudinary.com/du17vjpcn/image/upload/v1624226507/ecommerce/chedraui_sva3o9.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <a href="https://www.chedraui.com.mx/" class="btn boton" style="width:200px;">Ir al sitio</a>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" height="500" src="https://res.cloudinary.com/du17vjpcn/image/upload/v1624226502/ecommerce/soriana_sghdip.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <a href="https://www.soriana.com/" class="btn boton" style="width:200px;">Ir al sitio</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
<div class="container my-5 py-5" style="background-color:lightgray;">
    <div class="col-12">
        <h2 class="titulo-centro">Te podría interesar</h2>
        <div class="row">
            @foreach (Producto prod in ViewBag.productos)
            {
                <div class="col-sm-12 col-md-6 col-lg-3">
                    <div class="card text-center">
                        <img class="card-img-top mx-auto" style="width:80px; height:80px; " src="~/Content/Imagenes/Productos/@prod.imagen_producto" />
                        <div class="card-body">
                            <h5 class="card-title">@prod.nombre_producto</h5>
                            <p class="card-text">
                                @prod.descripcion_producto
                                <br />
                                $@prod.precio_producto
                            </p>
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <!--TODO: Cambiar a redirigir a la pagina de producto-->
                                    @Html.ActionLink("Ver el catálogo", "Index", "Catalogo", routeValues: null, htmlAttributes: new { @class = "btn boton" })
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>