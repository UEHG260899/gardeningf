
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEnvios.cshtml";
}

<style>
    .card > img {
        height: 230px;
    }

    .bg-card-admin, thead {
        background-color: var(--color-principal) !important;
        color: white;
    }

    .page-item.active, .page-link, .btnGreen, .card-header {
        background-color: var(--color-principal) !important;
        border-color: var(--color-principal) !important;
        color: white !important;
    }
</style>
<br>
<div class="row ml-3">
    <div class="col-md-6">
        <h2>¡Bienvenido!</h2>
        <br>
        <h3>Administración de envíos</h3>

    </div>
    <div class="col-md-6">
        <img class="card-img-top" height="200px" width="100px" src="~/Content/Imagenes/Paqueterias/adminPqt.png" alt="Admin">
    </div>
</div>
<hr>
<div class="row ml-3 mr-3">
    <div class="col-md-4">
        <div class="card" style="box-shadow: 0 3px 10px 0 rgba(0, 0, 0, 0.1);">
            <div class="card-header text-center">Paqueterías registradas</div>
            <div class="card-body text-center">
                @ViewBag.ttlPaqueterias
                <br><br>
                @Html.ActionLink("Ir al listado", "Index", "Paqueterias", new { area = " " }, new { @class = "btn btnGreen" })
            </div>
        </div>

    </div>
    <div class="col-md-4">
        <div class="card" style="box-shadow: 0 3px 10px 0 rgba(0, 0, 0, 0.1);">
            <div class="card-header text-center">Ordenes pendientes de envío</div>
            <div class="card-body text-center">
                @ViewBag.sinFechaEnvio
                <br><br>
                @Html.ActionLink("Ir al listado", "Index", "Orden", null, new { @class = "btn btnGreen" })
            </div>
        </div>

    </div>
    <div class="col-md-4">
        <div class="card" style="box-shadow: 0 3px 10px 0 rgba(0, 0, 0, 0.1);">
            <div class="card-header text-center">Ordenes pendientes de entrega</div>
            <div class="card-body text-center">
                @ViewBag.sinFechaEntrega
                <br><br>
                @Html.ActionLink("Ir al listado", "Index1", "Orden", null, new { @class = "btn btnGreen" })
            </div>
        </div>

    </div>
</div>



