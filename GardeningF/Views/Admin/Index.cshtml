@using GardeningF.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-lg">


    <h2 class="my-3">Panel del Administrador</h2>
    <p>En este panel usted puede visualizar los datos de las tablas de la plataforma, además se muestran estadísticas del sitio, puede acceder a las opciones completas de cada tabla seleccionando la opción "ver todas las opciones"</p>

    <div class="row">
        <div class="col-3">
            <div class="card">
                <div class="card-header bg-card-admin text-white text-center">
                    Total de empleados
                </div>
                <div class="card-body">

                    <p class="card-text text-center">10</p>

                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card ">
                <div class="card-header bg-card-admin text-white text-center">
                    Total de productos
                </div>
                <div class="card-body">

                    <p class="card-text text-center">50</p>

                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-header bg-card-admin text-white text-center">
                    Total de Ordenes
                </div>
                <div class="card-body">

                    <p class="card-text text-center">20</p>

                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-header bg-card-admin text-white text-center">
                    Ventas
                </div>
                <div class="card-body">

                    <p class="card-text text-center">$25000</p>

                </div>
            </div>
        </div>
    </div>
    
    <hr class="mt-4" />
    <div class="row">
        
        <div class="col-lg-12 col-md-12 mb-3" style="display:flex; flex-direction:column;">
            <h3 class="my-5">Lista de Empleados</h3>
                <div class=" col-lg-12 col-md-12 d-flex justify-content-between px-0" >
                    @Html.ActionLink("Ver todas las opciones", "Index", "Empleados", null, new { @class = "link-admin mr-auto" })
                    @Html.ActionLink("Agregar nuevo", "Create","Empleados", null, htmlAttributes: new { @class = "link-admin-agregar " })
                </div>
        </div>

        <table class="table">
            <thead>
                <tr class="bg-card-admin text-white">
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido Paterno</th>
                    <th scope="col">Apellido materno</th>
                    <th scope="col">Email</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Rol</th>
                </tr>
            </thead>
            <tbody>


                @foreach (Empleado empleado in ViewBag.empleados)
                {
                    <tr>
                        <td>@empleado.nombre_empleado</td>
                        <td>@empleado.app_empleado</td>
                        <td>@empleado.apm_empleado</td>

                        <td>@empleado.email_empleado</td>
                        <td>@empleado.Departamento.nombre_depto</td>
                        <td>@empleado.rol_empleado</td>



                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr class="mt-4" />
    <div class="row">

        <div class="col-12">
            <div class="mb-3" style="display:flex; flex-direction:column;">
                <h3 class="my-5">Lista de Productos</h3>
                <div class=" col-lg-12 col-md-12 d-flex justify-content-between px-0">
                    @Html.ActionLink("Ver todas las opciones", "Index", "Productos", null, new { @class = "link-admin mr-auto" })
                    @Html.ActionLink("Agregar nuevo", "Create", "Productos", null, htmlAttributes: new { @class = "link-admin-agregar " })
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr class="bg-card-admin text-white">
                        <th>Imagen</th>
                        <th>nombre producto</th>
                        <th>Descripción</th>
                        <th>Sub categoria</th>
                        <th>Cantidad en existencia</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Producto producto in ViewBag.productos)
                    {
                        <tr>
                            <td>@producto.imagen_producto</td>
                            <td>@producto.nombre_producto</td>
                            <td>@producto.descripcion_producto</td>

                            <td>@producto.Subcategoria.nombre_subcategoria</td>
                            <td>@producto.cantidad_existencia</td>
                            <td>@producto.precio_producto</td>



                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
    <div class="row">

        <div class="col-6">
            <div style="display:flex; flex-direction:column;">
                <h3 class="my-5">Lista de Categorias</h3>
                <p>
                    @Html.ActionLink("Ver todas las opciones", "Index", "Categorias", null, new { @class = "link-admin" })
                </p>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>nombre categoria</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Ventas</td>
                        <td>Encargado de generar las ventas</td>

                    </tr>

                </tbody>
            </table>
        </div>
        <div class="col-6">
            <div style="display:flex; flex-direction:column;">
                <h3 class="my-5">Lista de Subcategorias</h3>
                <p>
                    @Html.ActionLink("Ver todas las opciones", "Index", "Subcategorias", null, new { @class = "link-admin" })
                </p>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>nombre sub-categoria</th>
                        <th>Categoria</th>
                        <th>descripcion</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Utencilios</td>
                        <td>Utencilios</td>
                        <td>En esta subcategoria incluyen todos los utencilios</td>

                    </tr>

                </tbody>
            </table>
        </div>

    </div>

</div>