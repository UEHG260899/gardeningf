@model GardeningF.Models.Subcategoria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<style>
    textarea {
        max-width: 678px !important;
        resize: both;
        width: 100%;
        height: 85px;
    }

    .btn, p > a {
        text-decoration: none;
        padding: 7px;
        font-size: 15px;
        color: #ffffff;
        background-color: #1883ba;
        border-radius: 6px;
        text-decoration: none;
        background-color: var(--color-principal) !important;
        border-color: var(--color-principal) !important;
    }

        .btn:hover, p > a:hover {
            color: #ffffff;
            text-decoration: none;
        }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top:50px">
        <br>
        <h2>Crear Subcategoría</h2>

        <div class=" card">
            <div class="card-header">
                <h4>SubCategoría</h4>

            </div>
            <div class="card-body" style="height: 300px">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="row justify-content-start" style="height:130px">

                        <div class="col-md-4">
                            @Html.LabelFor(model => model.id_categoria, "Nombre Categoria", htmlAttributes: new { @class = "control-label col-md-12", @style = "padding-left: 0px" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-tags"></i></span>
                                @Html.DropDownList("id_categoria", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.id_categoria, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-8">
                            @Html.LabelFor(model => model.descripcion_subcategoria, "Descripción de subcategoría", htmlAttributes: new { @class = "control-label col-md-12", @style = "padding-left: 0px" })
                            @Html.TextAreaFor(model => model.descripcion_subcategoria, new { htmlAttributes = new { @class = "form-control textArea" } })
                            @Html.ValidationMessageFor(model => model.descripcion_subcategoria, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.nombre_subcategoria, "Nombre de Subcategóría", htmlAttributes: new { @class = "control-label col-md-12", @style = "padding-left: 0px" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-tag"></i></span>
                                @Html.EditorFor(model => model.nombre_subcategoria, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre_subcategoria, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                </div>
                <div class="row justify-content-end" style="right">

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12" style="right; ">
                            <input type="submit" value="Crear" class="btn" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <p>
            @Html.ActionLink("Tabla Subcategorías", "Index")
        </p>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}