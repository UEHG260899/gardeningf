@model GardeningF.Models.Paqueteria


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .card > img {
        height: 230px;
    }

    .bg-card-admin, thead {
        background-color: var(--color-principal) !important;
        color: white;
    }

    .page-item.active .page-link, .btn, .card-header {
        background-color: var(--color-principal) !important;
        border-color: var(--color-principal) !important;
        color: white !important;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <br>
        <br>
        <br>
        <div class="card">
            <div class="card-header">Eliminación Paquetería</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 offset-md-1">
                        <div class="form-group">
                            <label for="idPaqueteria">Id Paquetería:</label>
                            <input type="text" class="form-control" id="idPaqueteria">
                        </div>
                    </div>
                    <div class="col-md-2 ">
                        <input type="submit" value="Buscar" style="margin-top:30px !important" class="btn btnGuardar" />
                    </div>
                </div>
                <hr>

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id_paqueteria)
                    <div class="row">
                        <div class="col-md-4 offset-md-1">
                            <div class="form-group">
                                @Html.LabelFor(model => model.nombre_paqueteria, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.nombre_paqueteria, "Nombre", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombre_paqueteria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 offset-md-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.rfc_paqueteria, "RFC", htmlAttributes: new { @class = "control-label col-md-12 " })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.rfc_paqueteria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.rfc_paqueteria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 offset-md-1">
                            <div class="form-group">
                                @Html.LabelFor(model => model.telefono_paqueteria, "Telefono Paquetería", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.telefono_paqueteria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.telefono_paqueteria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 offset-md-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.web_paqueteria, "Web", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.web_paqueteria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.web_paqueteria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 offset-md-1">
                            <div class="form-group">
                                @Html.LabelFor(model => model.direccion_paqueteria, "Dirección", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.direccion_paqueteria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.direccion_paqueteria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 offset-md-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.contacto_paqueteria, "Contacto", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.contacto_paqueteria, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.contacto_paqueteria, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 offset-md-1">
                            <div class="form-group">
                                @Html.LabelFor(model => model.tel_contacto, "Tel. Contacto", htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.tel_contacto, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.tel_contacto, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-4 offset-md-7">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Guardar" class="btn btn-danger" />
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<br>
<div class="row">
    <div class="col-md-2 offset-md-1">
        @Html.ActionLink("Regresar a la lista", "Index", "Paqueterias", new { @class = "btn btnGuardar" })
    </div>

</div>
